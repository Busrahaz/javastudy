package j05_ifStatementTernaryOperator;

import java.util.Scanner;

public class C02_if_elseStatemennt {
    public static void main(String[] args) {
        // task-> girilen yasın 18 den buyulugunu kontrol eden code create ediniz..
     Scanner input = new Scanner(System.in);
        System.out.print("Agam bi sayı giresen : ");
        int yas=input.nextInt();

        if (yas>18 ) {
            System.out.println("Agam yas kemale erdi cuğara alabilisen :) ");
        }else{
            System.out.println("Agam BUYU DE GEL");
        }

    }
}